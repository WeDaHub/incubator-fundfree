/* miniprogram/pages/fundlist/list/index.wxss */
page {
  background-color: #f2f3f3;
  color: #333
}
.main {
  height: 100vh;
  max-height: 100vh;
  display: flex;
  flex-direction: column;
}
.head-info {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.head-info .title {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 180rpx;
  justify-content: center;
  background: #60A2FA;
  color: #fff;
}

.head-info .title text:first-child {
  font-size: 52rpx;
  line-height: 60rpx;
}

.head-info .title  text:last-child {
  font-size: 22rpx;
}

.sub-title {
  background: #7AB3FA;
  color: #fff;
  height: 108rpx;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.sub-title-left {
  
}
.sub-title-right {

}
.list-container {
  height: calc(100vh - 288rpx);
}
.list-view {
  height: 100%;
}


.scroll-view-item {
  /* display: flex; */
  background: #fff;
  box-shadow: 0 4rpx 16rpx #d6d6d6;
  padding: 28rpx;
  margin-top: 16rpx;
  border-radius: 8rpx;
}

.item-title {
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: #ebe9e9 2rpx solid;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.item-title text:last-child {
  font-size: 24rpx;
  color: rgb(92, 90, 90);
}
.item-title-left text:last-child {
    font-size: 20rpx;
    padding-left: 8rpx;
    color: #999;
}
.item-content {
  display: flex;
  justify-content: space-between;
}

.item-total-money {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

.descript-text {
  font-size: 20rpx;
  color: #999;
}

.item-estimate-value {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-day-value {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.increase-rate {
  font-size: 20rpx;
}

.item-holding-gains {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wrap-side-view-btn .weui-slideview__btn {
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}